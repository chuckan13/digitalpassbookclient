<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/club_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart ="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        tools:ignore="RtlSymmetry"
        android:contentDescription="@string/club_logo" />

    <TextView
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/club_logo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        tools:ignore="RelativeOverlap,RtlSymmetry" />

    <ImageButton
        android:id="@+id/send_button"
        android:contentDescription="@string/edit_event"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:text="@string/details_button"
        android:textStyle="bold"
        android:src="@drawable/ic_send_24dp"
        android:background="#000000"/>

    <TextView
        android:id="@+id/pass_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/club_name"
        android:layout_alignEnd="@id/send_button"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        tools:ignore="RelativeOverlap,RtlSymmetry" />

